<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
  </head>
  <body>
    <h1><%= quest.quest%> </h1>
    <form action="/quests/<%=quest.id%>/invite" method="post">
      <select name="playerId">
        <% players.forEach(player => { %>
          <option value="<%= player.id%>"> <%= player.name %> </option>
        <% }) %>
      </select>
      <input type="text" name="position" placeholder="Input position">
      <input type="hidden" name="level" value="<%= quest.level %>">
      <button type="submit">Save</button>
    </form>
    <% if(err) {%>
      <h2 style="color: red"><%= err%></h2>
    <% } %>
  </body>
</html>
